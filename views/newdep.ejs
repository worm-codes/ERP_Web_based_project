<%-include("partials/header") %>


<div class="container">
	<div class=" mt-3 d-flex justify-content-center align-items-center">
		
		<h1>
			DEPARTMENTS
		</h1>
	</div>
	<form action="/newdep" style="mt-2" method="POST">
	<div class="form-row" >
    <div class="col form-group">
      <input type="text" class="form-control" placeholder="DEPARTMENT NAME" name="name">
  
   
		
  </div>
		
    
    <div class="col form-group">
      <select class="form-control"id="select1" name="check">
		  <option value="true">
			  ACTIVE
		  </option>
		  <option value="false">PASSIVE
		  </option>
		</select>
    </div>
			<button href="/" class="btn btn-success btn-md" style="height:38px;" >+ADD</button>
		</div>
	
			
		
			
			
		
  
	
		
		
	
</form>
	
<% departman.forEach(function(dep){%>
		
	<div>
		<form action="/newdep/<%=dep._id%>?_method=PUT" class="mt-2" style=" display: inline;" method="POST">
	<div class="form-row" >
    <div class="col form-group">
      <input type="text" class="form-control" value="<%=dep.isim%>" name="name">
		</div>
  <div class="col form-group">
	  
	  <select class=" form-control" name="check">
			<%if(dep.check){%>
			<option value="true">
			  ACTIVE
		  </option>
		  <option value="false">PASSIVE
		  </option>
			
			<%}
			else{%>
			<option value="false">PASSIVE
		  </option>
			<option value="true">
			  ACTIVE
		  </option>
		  
			
			<%}%>
		  
		</select>
	  </div>
	  <button href="/" class="btn btn-success btn-md" style="height:38px; width:100px;" >UPDATE</button>
	  
  
		
			
		</form>
			 
		<form method="POST" action="/newdep/<%=dep._id%>?_method=DELETE"  style=" display: inline;" >
		<button href="/" class="btn btn-danger m-0 btn-md" style="height:38px; width:100px;" >CLOSE</button>
	</form>
			<a href="/personel/<%=dep._id%>/yeniZimmet" class="btn btn-info btn-md" style="height:38px; " >EMBEZZLED DETAILS</a>
			</div>
		
		
		
		
	</div>
	
	<%})%>
	
</div>




<%- include("partials/footer") %>